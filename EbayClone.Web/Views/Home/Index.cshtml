@model List<EbayClone.Web.Models.Product>
@{
    ViewData["Title"] = "Home";
    int totalPages = ViewBag.TotalPages;
    int currentPage = ViewBag.CurrentPage;
}

<div class="bg-primary text-white py-5 mb-4">
    <div class="container">
        <h1 class="display-4"><i class="fas fa-shopping-bag"></i> Welcome to eBay Clone</h1>
        <p class="lead">Discover amazing deals with secure payment and fast shipping</p>
        <div class="d-flex gap-2 mt-3">
            <span class="badge bg-success"><i class="fas fa-shield-alt"></i> Secure Escrow Payment</span>
            <span class="badge bg-info"><i class="fas fa-truck"></i> Fast Shipping</span>
            <span class="badge bg-warning text-dark"><i class="fas fa-clock"></i> 21-Day Buyer Protection</span>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-4"><i class="fas fa-fire text-danger"></i> Featured Products</h2>
        </div>
    </div>
    <div class="container mb-4">
        <!-- Filter Form -->
        <form class="row g-3 mb-4" method="post">
            <div class="col-md-3">
                <input type="text" name="search" class="form-control" placeholder="Search..." value="@ViewBag.Search" onchange="this.form.submit()" />
            </div>
            <div class="col-md-3">
                <select name="categoryId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.categoryId"
                                selected="@(ViewBag.CategoryId == category.categoryId)" >
                            @category.Name
                        </option>
                    }
                </select>
            </div>
            @ViewBag.Category
            <div class="col-md-2">
                <select name="orderBy" class="form-select" onchange="this.form.submit()">
                    <option value="">Order by</option>
                    <option value="price" selected="@(ViewBag.OrderBy == "price")">Price</option>
                    <option value="price" selected="@(ViewBag.OrderBy == "sellerid")">Seller</option>
                    <option value="price" selected="@(ViewBag.OrderBy == "name")">Name</option>
                    <option value="price" selected="@(ViewBag.OrderBy == "auctionendtime")">Auctionend time</option>
               </select>
            </div>
            <div class="col-md-2">
                <select name="order" class="form-select" onchange="this.form.submit()">
                    <option value="asc" selected="@(ViewBag.Order == "asc")">Ascending</option>
                    <option value="desc" selected="@(ViewBag.Order == "desc")">Descending</option>
                </select>
            </div>
            <div class="col-md-2">
                <select name="pagination" class="form-select" onchange="this.form.submit()">
                    <option value="8" selected="@(ViewBag.Pagination == 8)">8</option>
                    <option value="12" selected="@(ViewBag.Pagination == 12)">12</option>
                    <option value="16" selected="@(ViewBag.Pagination == 16)">16</option>
                    <option value="20" selected="@(ViewBag.Pagination == 20)">20</option>
                    <option value="24" selected="@(ViewBag.Pagination == 24)">24</option>
                </select>
            </div>
            <div class="col-md-2">
                <a href="/Home/Index" class="btn btn-secondary w-100">
                    Clear filter
                </a>
            </div>
        </form>
    </div>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card product-card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted small">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="h4 text-danger mb-0">$@product.Price.ToString("N2")</span>
                            <span class="badge bg-success">
                                <i class="fas fa-star"></i> @product.SellerRating
                            </span>
                        </div>
                        <p class="text-muted small mb-2">
                            <i class="fas fa-user"></i> Seller: @product.Seller?.Email
                        </p>
                        <a href="/Home/Product?id=@product.productId" class="btn btn-primary w-100">
                            <i class="fas fa-shopping-cart"></i> Buy Now
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card border-0 shadow">
                <div class="card-body p-4">
                    <h3 class="mb-4"><i class="fas fa-shield-alt text-success"></i> How Our Escrow System Works</h3>
                    <div class="row">
                        <div class="col-md-3 text-center">
                            <div class="mb-3">
                                <i class="fas fa-shopping-cart fa-3x text-primary"></i>
                            </div>
                            <h5>1. Purchase Item</h5>
                            <p class="text-muted">Complete your order and pay securely with PayPal</p>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="mb-3">
                                <i class="fas fa-lock fa-3x text-warning"></i>
                            </div>
                            <h5>2. Payment Held</h5>
                            <p class="text-muted">Your payment is held in escrow for 7-21 days based on seller rating</p>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="mb-3">
                                <i class="fas fa-truck fa-3x text-info"></i>
                            </div>
                            <h5>3. Item Shipped</h5>
                            <p class="text-muted">Seller ships your item with tracking</p>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="mb-3">
                                <i class="fas fa-check-circle fa-3x text-success"></i>
                            </div>
                            <h5>4. Payment Released</h5>
                            <p class="text-muted">After delivery confirmation, seller receives payment</p>
                        </div>
                    </div>
                    <div class="alert alert-info mt-3">
                        <i class="fas fa-info-circle"></i> <strong>Buyer Protection:</strong> If there's an issue with your order, you can dispute within the escrow period for a full refund.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Pagination -->
@if (totalPages > 1)
{
    <nav aria-label="Page navigation example" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?page=@(currentPage - 1)&search=@ViewBag.Search&categoryId=@ViewBag.CategoryId&orderBy=@ViewBag.OrderBy&order=@ViewBag.Order">Previous</a>
            </li>
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="?page=@i&search=@ViewBag.Search&categoryId=@ViewBag.CategoryId&orderBy=@ViewBag.OrderBy&order=@ViewBag.Order">@i</a>
                </li>
            }
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="?page=@(currentPage + 1)&search=@ViewBag.Search&categoryId=@ViewBag.CategoryId&orderBy=@ViewBag.OrderBy&order=@ViewBag.Order">Next</a>
            </li>
        </ul>
    </nav>
}